<li id="task<%= task.id %>" class="task_item_box ui-state-default"> 

  <div class="well task_item">
    <%= task.name %>
  </div>
  <div class="btn-group pull-right">
    <button class="task_edit btn btn-success"><span class="glyphicon glyphicon-edit"></span></button>
  </div>
  <div class="btn-group">
    <form method="post" action="/tasks/<%= task.id %>">
      <input type="hidden" name="_method" value="delete" />
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <button type="submit" data-confirm="Are you sure?" class="btn btn-danger">
        <span class="glyphicon glyphicon-remove"></span>
      </button>
    </form>
  </div>

  <div class="task_edit_box" style="display:none">
    <form action="/tasks/<%= task.id %>" method="post">
      <input type="hidden" name="_method" value="patch" />
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="task[assignee_id]" value="<%= task.assignee_id %>">
      <input type="hidden" name="task[list_id]" value="<%= task.list_id %>" class="list_id_input">
      <textarea name="task[name]" class="well task_item form-control"><%= task.name %></textarea>
      <div class="btn-group">
        <button type="submit" name="commit" class="btn btn-success submit_edit">
          <span class="glyphicon glyphicon-ok"></span>
        </button>
      </div>
    </form>
  </div>
<br>
<br>
</li>