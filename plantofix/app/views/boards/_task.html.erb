<li id="task<%= task.id %>" class="task_item_box ui-state-default"> 

  <div class="well task_item">
    <%= task.name %>
    <button id="test_id" class="btn task_edit task-btn-up task-btn">
      <span class="glyphicon glyphicon-edit"></span>
    </button>
    <form method="post" action="/tasks/<%= task.id %>" class="task-form">
      <input type="hidden" name="_method" value="delete" />
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <button type="submit" data-confirm="Are you sure?" class="btn task-btn-down task-btn">
        <span class="glyphicon glyphicon-remove"></span>
      </button>
    </form>
  </div>

  <div class="task_edit_box well task_item " style="display:none">
  <form action="/tasks/<%= task.id %>" method="post" class="task-form">
      <input type="hidden" name="_method" value="patch" />
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="task[assignee_id]" value="<%= task.assignee_id %>">
      <input type="hidden" name="task[list_id]" value="<%= task.list_id %>" class="list_id_input">
      <textarea name="task[name]" class="form-control"><%= task.name %></textarea>
      <button type="submit" name="commit" class="btn task-btn task-btn-up submit_edit">
        <span class="glyphicon glyphicon-ok"></span>
      </button>
    </form>
  </div>
</li>