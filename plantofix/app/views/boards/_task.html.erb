<li id="task<%= task.id %>" class="ui-state-default"> 
  <div class="task-container task_item_box">
    <div class="well task_item" style="background-color:<%= task.color %>">
      <p class="text-padding">
        <%= task.name %>
      </p>
      <button id="test_id" class="btn task_edit task-btn-up task-btn">
        <span class="glyphicon glyphicon-edit"></span>
      </button>
      <form method="post" action="/tasks/<%= task.id %>" class="task-form-delete">
        <input type="hidden" name="_method" value="delete" />
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <button type="submit" data-confirm="Are you sure?" class="btn task-btn-down task-btn">
          <span class="glyphicon glyphicon-trash"></span>
        </button>
      </form>
    </div>

    <form action="/tasks/<%= task.id %>" method="post" class="task_edit_box task-form-edit" style="display:none">
      <input type="hidden" name="_method" value="patch" />
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
      <input type="hidden" name="task[list_id]" value="<%= task.list_id %>" class="list_id_input">
      <input type="hidden" name="task[color]" value="<%= task.color %>" class="new_color">
      <input type="hidden" name="task[position]" value="<%= task.position %>" class="task_position_input">
      <textarea name="task[name]" class="form-control well task_item"><%= task.name %></textarea>
      <button type="submit" name="commit" class="btn task-btn submit_edit">
        <span class="glyphicon glyphicon-ok"></span>
      </button>
    </form>

    <button type="button" class="btn task-btn-up out-btn" data-toggle="modal" data-target="#task_description_modal">
      <span class="glyphicon glyphicon-new-window"></span>
    </button>

    <button class="btn task-btn-down out-btn colorp">
      <span class="glyphicon glyphicon-pencil"></span>
    </button>
  </div>

  <div class="modal fade" id="task_description_modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
          <h4 class="modal-title" id="task_description_modalLabel"><%= task.name %></h4>
        </div>
        <div class="modal-body">

    <form action="/tasks/<%= task.id %>" method="post">
      <input type="hidden" name="_method" value="patch" />
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
      <textarea rows="15" name="task[description]" class="form-control text-description"> <%= task.description %></textarea>
      <button type="submit" name="commit" class="btn btn-primary save">
        Save
      </button>
    </form>



       
        </div>
      </div>
    </div>
  </div>

</li>